		"builtin-modules": "5.0.0",
		"esbuild": "^0.27.2",
		"obsidian": "latest",
		"tslib": "2.8.1",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"fastmcp": "^3.26.7",
		"zod": "^4.2.1"
